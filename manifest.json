{
  "manifest_version": 3,
  "name": "NWS Tools",
  "version": "1.4",
  "description": "NWS Tools for web development",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "downloads",
    "contextMenus",
    "sidePanel"
  ],
  "web_accessible_resources": [{
    "resources": ["libs/jszip.min.js"],
    "matches": ["<all_urls>"]
  }],
  "side_panel": {
    "default_path": "html/toolspanel.html"
  },
  "action": {
    "default_icon": "img/icon.png",
    "default_title": "AI浏览器助手",
    "default_popup": "html/hello.html"
  },
  "options_page": "html/options.html",
  "background": {
    "service_worker": "js/background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "js/modules-loader.js",
        "js/utils/error-handler.js",
        "js/modules/core/ModuleBase.js",
        "js/modules/core/ModuleManager.js",
        "js/modules/chrome/ChromeSettingsModule.js",
        "js/modules/ui/NotificationModule.js",
        "js/modules/features/ImageDownloaderModule.js",
        "js/modules/features/ElementHighlighterModule.js",
        "js/main.js",
        "js/content-scripts/toolsbar.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": ["*://civitai.com/*"],
      "js": [
        "js/modules-loader.js",
        "js/content-scripts/civitai.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": ["*://*.aliyun.com/*"],
      "js": [
        "js/modules-loader.js",
        "js/content-scripts/aliyun.js"
      ],
      "run_at": "document_end"
    }
  ]
}