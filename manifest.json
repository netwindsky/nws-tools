{
  "manifest_version": 3,
  "name": "NWS Tools",
  "version": "1.0",
  "description": "NWS Tools for web development",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "downloads",
    "contextMenus",
    "sidePanel"
  ],
  "web_accessible_resources": [{
    "resources": ["js/jszip.min.js"],
    "matches": ["<all_urls>"]
  }],
  "side_panel": {
    "default_path": "html/toolspanel.html"
  },
  "action": {
    "default_icon": "img/icon.png",
    "default_title": "AI浏览器助手",
    "default_popup": "html/hello.html"
  },
  "options_page": "html/options.html",
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "js/jszip.min.js",
        "js/jquery-3.7.1.js",
        "js/notification.js",
        "js/elementHighlighter.js"
      ]
    }
  ]
}