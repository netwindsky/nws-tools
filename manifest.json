{
  "manifest_version": 3,
  "name": "NWS Tools",
  "version": "1.5",
  "description": "NWS Tools for web development",
  "default_locale": "zh_CN",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "downloads",
    "contextMenus",
    "sidePanel"
  ],
  "web_accessible_resources": [{
    "resources": [
      "libs/jszip.min.js",
      "libs/marked.min.js",
      "css/modern-control-panel.css",
      "css/enhanced-toolpanel.css",
      "css/element-highlighter.css",
      "css/image-downloader.css",
      "css/content-scripts.css",
      "icons/icon16.png",
      "img/icon.png",
      "img/download-two.svg"
    ],
    "matches": ["<all_urls>"]
  }],
  "side_panel": {
    "default_path": "html/toolspanel.html"
  },
  "action": {
    "default_icon": "img/icon.png",
    "default_title": "AI浏览器助手",
    "default_popup": "html/hello.html"
  },
  "options_page": "html/options.html",
  "background": {
    "service_worker": "js/app/background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "js/utils/dom-helper.js",
        "js/utils/error-handler.js",
        "js/modules-loader.js",
        "js/services/i18n/I18nService.js",
        "js/utils/ConfigManager.js",
        "js/utils/StyleManager.js",
        "js/modules/core/ModuleBase.js",
        "js/modules/core/ModuleManager.js",
        "js/services/chrome/ChromeSettingsModule.js",
        "js/modules/ui/NotificationModule.js",
        "js/modules/ui/SidebarModule.js",
        "js/modules/ui/SidebarView.js",
        "js/modules/features/translation/TranslationService.js",
        "js/modules/features/translation/TranslationView.js",
        "js/modules/features/translation/TranslationModule.js",
        "js/modules/features/summary/SummaryService.js",
        "js/modules/features/summary/SummaryView.js",
        "js/modules/features/summary/SummaryModule.js",
        "js/modules/features/image-downloader/ImageDownloaderService.js",
        "js/modules/features/image-downloader/ImageDownloaderView.js",
        "js/modules/features/image-downloader/ImageDownloaderModule.js",
        "js/modules/features/element-highlighter/ElementHighlighterService.js",
        "js/modules/features/element-highlighter/ElementHighlighterView.js",
        "js/modules/features/element-highlighter/ElementHighlighterModule.js",
        "js/main.js",
        "js/app/content/toolsbar/toolsbar.js"
      ],
      "css": [
        "css/modern-control-panel.css",
        "css/enhanced-toolpanel.css",
        "css/content-scripts.css",
        "css/element-highlighter.css",
        "css/image-downloader.css"
      ],
      "run_at": "document_end"
    },
    {
      "matches": ["*://civitai.com/*"],
      "js": [
        "js/utils/dom-helper.js",
        "js/utils/ConfigManager.js",
        "js/modules-loader.js",
        "js/modules/core/ModuleBase.js",
        "js/modules/core/ModuleManager.js",
        "js/services/chrome/ChromeSettingsModule.js",
        "js/modules/ui/NotificationModule.js",
        "js/app/content/site/civitai.js"
      ],
      "css": [
        "css/content-scripts.css",
        "css/modern-control-panel.css"
      ],
      "run_at": "document_end"
    },
    {
      "matches": ["*://*.aliyun.com/*"],
      "js": [
        "js/utils/dom-helper.js",
        "js/utils/ConfigManager.js",
        "js/modules-loader.js",
        "js/modules/core/ModuleBase.js",
        "js/modules/core/ModuleManager.js",
        "js/services/chrome/ChromeSettingsModule.js",
        "js/modules/ui/NotificationModule.js",
        "js/app/content/site/aliyun.js"
      ],
      "css": [
        "css/content-scripts.css",
        "css/modern-control-panel.css"
      ],
      "run_at": "document_end"
    }
  ]
}
